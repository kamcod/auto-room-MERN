{
  "version": 2,
  "builds": [
    {
      "src": "./frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "./frontend/build"
      }
    },
    {
      "src": ".server/**/*",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/app.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ]
}
